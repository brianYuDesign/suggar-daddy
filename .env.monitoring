# ==================================================
# Monitoring Stack Environment Variables
# ==================================================

# ========== Database ==========
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=sugar_daddy_db
DB_PORT=5432

# ========== Redis ==========
REDIS_PASSWORD=
REDIS_PORT=6379

# ========== Application ==========
NODE_ENV=development
LOG_LEVEL=debug

# ========== Grafana ==========
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ========== Elasticsearch ==========
ELASTICSEARCH_PASSWORD=changeme

# ========== Alert Services ==========
# Slack Webhook URL (用於告警通知)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# PagerDuty Service Key (用於緊急告警)
PAGERDUTY_SERVICE_KEY=

# ========== AWS S3 (可選，用於內容流) ==========
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=
CDN_URL=

# ========== Recommendation Service ==========
RECOMMENDATION_CACHE_TTL=3600
RECOMMENDATION_BATCH_SIZE=50
RANDOM_EXPLORATION_RATIO=0.2

# ========== Monitoring Retention ==========
# Prometheus 數據保留時間
PROMETHEUS_RETENTION=15d

# ========== Performance Tuning ==========
# 根據系統資源調整
PROMETHEUS_MEMORY_LIMIT=1G
ELASTICSEARCH_MEMORY_LIMIT=2G
GRAFANA_MEMORY_LIMIT=512M
