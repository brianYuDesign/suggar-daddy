{
  "name": "matching-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/matching-service/src",
  "projectType": "application",
  "tags": ["scope:matching"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"],
        "cwd": "apps/matching-service"
      },
      "configurations": {
        "development": { "args": ["--node-env=development"] }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "matching-service:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": { "buildTarget": "matching-service:build:development" },
        "production": { "buildTarget": "matching-service:build:production" }
      }
    },
    "test": { "executor": "@nx/jest:jest", "options": { "jestConfig": "apps/matching-service/jest.config.ts", "passWithNoTests": true } }
  }
}
