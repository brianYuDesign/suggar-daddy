# ==========================================
# Database Configuration
# ==========================================
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=sugar_daddy_db
DB_PORT=5432

# ==========================================
# Redis Configuration
# ==========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ==========================================
# Application Environment
# ==========================================
NODE_ENV=development
LOG_LEVEL=debug

# ==========================================
# Recommendation Service
# ==========================================
RECOMMENDATION_CACHE_TTL=3600
RECOMMENDATION_BATCH_SIZE=50
RANDOM_EXPLORATION_RATIO=0.2

# ==========================================
# Content-Streaming Service
# ==========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=
CDN_URL=
TRANSCODING_ENABLED=true
TRANSCODING_QUALITIES=360p,720p,1080p

# ==========================================
# Feature Flags
# ==========================================
ENABLE_SUBSCRIPTION_FEATURES=true
ENABLE_CDN=false
