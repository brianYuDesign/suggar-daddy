# ============================================================
# 環境變數配置
# ============================================================

# Core Environment
NODE_ENV=development
LOG_LEVEL=debug

# API Gateway & Server Configuration
PORT=3000
CORS_ORIGINS=http://localhost:4200,http://localhost:4300

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=suggar_daddy

# PostgreSQL High Availability Configuration
# Enable HA mode for read-write splitting (set to 'true' in production)
POSTGRES_HA_ENABLED=true
POSTGRES_MASTER_HOST=postgres-master
POSTGRES_MASTER_PORT=5432
POSTGRES_REPLICA_HOST=postgres-replica
POSTGRES_REPLICA_PORT=5433
REPLICATION_PASSWORD=your_secure_replication_password_here

# Database Connection Pool Settings
DATABASE_POOL_MAX=20
DATABASE_POOL_MIN=5
DATABASE_POOL_IDLE_TIMEOUT=30000
DATABASE_POOL_CONNECTION_TIMEOUT=2000

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Redis Sentinel High Availability Configuration
# ================================================
# Enable Sentinel mode for Redis high availability
# Sentinel 提供自動故障轉移，可用性達 99.9%
#
# 單機模式（開發環境，預設）：
#   REDIS_HOST=redis
#   REDIS_PORT=6379
#
# Sentinel 模式（生產環境，推薦）：
#   取消下面兩行註解，並註解掉上面的 REDIS_HOST/REDIS_PORT
REDIS_SENTINELS=redis-sentinel-1:26379,redis-sentinel-2:26380,redis-sentinel-3:26381
REDIS_MASTER_NAME=mymaster

# Kafka Configuration
KAFKA_BROKERS=kafka:9092

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Firebase Configuration (Optional)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Cloudinary Configuration (for file uploads — optional, local storage used by default)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Local Media Storage (development)
UPLOAD_DIR=./uploads
MEDIA_BASE_URL=http://localhost:3008

# Jaeger Distributed Tracing
JAEGER_ENDPOINT=http://jaeger:4318/v1/traces
OTEL_SAMPLING_RATE=1.0
APP_VERSION=1.0.0

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# ============================================================
# Rate Limiting Configuration
# ============================================================
# 全局 Rate Limiting - 保護 API 免受 DDoS 攻擊

# 全局限流：每分鐘最多請求數（預設：100）
THROTTLE_GLOBAL_LIMIT=100

# 認證端點限流：每分鐘最多請求數（預設：5）
# 適用於 /api/auth/login, /api/auth/register 等
THROTTLE_AUTH_LIMIT=5

# 支付端點限流：每分鐘最多請求數（預設：10）
# 適用於 /api/payment/*, /api/subscription/* 等
THROTTLE_PAYMENT_LIMIT=10

# 限流時間窗口（秒，預設：60 = 1 分鐘）
THROTTLE_WINDOW_SECONDS=60

# ML Recommendation Service
ML_SERVICE_URL=http://localhost:5000

# ============================================================
# Content Moderation Configuration
# ============================================================
# Enable/disable automated content moderation pipeline
MODERATION_ENABLED=true

# NSFW detection thresholds (0.0 - 1.0)
# Score >= AUTO_HIDE → auto-hide content (HIGH severity)
NSFW_AUTO_HIDE_THRESHOLD=0.8
# Score >= FLAG → flag for manual review (MEDIUM severity)
NSFW_FLAG_THRESHOLD=0.5
