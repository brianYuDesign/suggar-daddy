{
  "mode": "managed",
  "strictness": "medium",
  "workflows": {
    "PLAN": true,
    "READ": true,
    "CHANGE": true,
    "QC": true,
    "PERSIST": true
  },
  "fastLane": {
    "enabled": true,
    "maxSize": "10kb",
    "patterns": ["MEMORY.md", "*.log", "daily notes"]
  },
  "audit": {
    "enabled": true,
    "logPath": ".gov_audit",
    "retention": "90days"
  },
  "bypass": {
    "emergency": true,
    "requireReason": true,
    "logBypass": true
  }
}
