<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        .header {
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 5px;
        }
        .header.firing {
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
        }
        .header.resolved {
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
        }
        .alert {
            background-color: #f8f9fa;
            border-left: 4px solid #007bff;
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 3px;
        }
        .alert.critical {
            border-left-color: #dc3545;
        }
        .alert.warning {
            border-left-color: #ffc107;
        }
        .alert.info {
            border-left-color: #17a2b8;
        }
        .label {
            display: inline-block;
            padding: 3px 8px;
            border-radius: 3px;
            font-size: 12px;
            font-weight: bold;
            margin-right: 5px;
        }
        .label.critical {
            background-color: #dc3545;
            color: white;
        }
        .label.warning {
            background-color: #ffc107;
            color: #212529;
        }
        .label.info {
            background-color: #17a2b8;
            color: white;
        }
        .metric {
            font-family: monospace;
            background-color: #e9ecef;
            padding: 2px 5px;
            border-radius: 3px;
        }
        .timestamp {
            color: #6c757d;
            font-size: 14px;
        }
        .action-required {
            background-color: #fff3cd;
            border: 1px solid #ffc107;
            padding: 10px;
            margin-top: 10px;
            border-radius: 3px;
        }
        .impact {
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            padding: 10px;
            margin-top: 10px;
            border-radius: 3px;
        }
        h1, h2, h3 {
            margin-top: 0;
        }
        .footer {
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #dee2e6;
            color: #6c757d;
            font-size: 12px;
        }
    </style>
</head>
<body>
    <div class="header {{ .Status }}">
        <h1>
            {{ if eq .Status "firing" }}
                üö® Alert Firing
            {{ else }}
                ‚úÖ Alert Resolved
            {{ end }}
        </h1>
        <p>
            <strong>Status:</strong> {{ .Status | toUpper }}<br>
            <strong>Group:</strong> {{ .GroupLabels.alertname }}<br>
            <strong>Service:</strong> {{ .GroupLabels.service }}<br>
            <strong>Firing:</strong> {{ .Alerts.Firing | len }}<br>
            <strong>Resolved:</strong> {{ .Alerts.Resolved | len }}
        </p>
    </div>

    {{ if gt (len .Alerts.Firing) 0 }}
    <h2>üî• Firing Alerts ({{ .Alerts.Firing | len }})</h2>
    {{ range .Alerts.Firing }}
    <div class="alert {{ .Labels.severity }}">
        <h3>{{ .Labels.alertname }}</h3>
        
        <p>
            <span class="label {{ .Labels.severity }}">{{ .Labels.severity | toUpper }}</span>
            <span class="label">{{ .Labels.category }}</span>
            <span class="label">{{ .Labels.priority }}</span>
        </p>
        
        <p><strong>Service:</strong> <span class="metric">{{ .Labels.service }}</span></p>
        {{ if .Labels.instance }}
        <p><strong>Instance:</strong> <span class="metric">{{ .Labels.instance }}</span></p>
        {{ end }}
        
        <p><strong>Description:</strong><br>{{ .Annotations.description }}</p>
        
        {{ if .Annotations.impact }}
        <div class="impact">
            <strong>üí• Impact:</strong><br>
            {{ .Annotations.impact }}
        </div>
        {{ end }}
        
        {{ if .Annotations.action }}
        <div class="action-required">
            <strong>‚ö†Ô∏è Action Required:</strong>
            <pre>{{ .Annotations.action }}</pre>
        </div>
        {{ end }}
        
        <p class="timestamp">
            <strong>Started:</strong> {{ .StartsAt.Format "2006-01-02 15:04:05" }}<br>
            <strong>Duration:</strong> {{ .StartsAt.Sub now }}
        </p>
        
        {{ if .GeneratorURL }}
        <p><a href="{{ .GeneratorURL }}">View in Prometheus ‚Üí</a></p>
        {{ end }}
    </div>
    {{ end }}
    {{ end }}

    {{ if gt (len .Alerts.Resolved) 0 }}
    <h2>‚úÖ Resolved Alerts ({{ .Alerts.Resolved | len }})</h2>
    {{ range .Alerts.Resolved }}
    <div class="alert">
        <h3>{{ .Labels.alertname }}</h3>
        
        <p>
            <span class="label">{{ .Labels.severity | toUpper }}</span>
            <span class="label">{{ .Labels.category }}</span>
        </p>
        
        <p><strong>Service:</strong> <span class="metric">{{ .Labels.service }}</span></p>
        
        <p><strong>Description:</strong><br>{{ .Annotations.description }}</p>
        
        <p class="timestamp">
            <strong>Started:</strong> {{ .StartsAt.Format "2006-01-02 15:04:05" }}<br>
            <strong>Ended:</strong> {{ .EndsAt.Format "2006-01-02 15:04:05" }}<br>
            <strong>Duration:</strong> {{ .EndsAt.Sub .StartsAt }}
        </p>
    </div>
    {{ end }}
    {{ end }}

    <div class="footer">
        <p>
            <strong>Alertmanager:</strong> {{ .ExternalURL }}<br>
            <strong>Cluster:</strong> suggar-daddy-production<br>
            <strong>Time:</strong> {{ now.Format "2006-01-02 15:04:05" }}
        </p>
        <p>
            This is an automated alert from Suggar Daddy Monitoring System.<br>
            For more information, please visit the <a href="{{ .ExternalURL }}">Alertmanager Dashboard</a>.
        </p>
    </div>
</body>
</html>
{{ end }}
