# ==========================================
# Test Environment Configuration
# ==========================================

# Database Configuration (use separate test database)
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=sugar_daddy_test_db
DB_PORT=5432

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Application Environment
NODE_ENV=test
LOG_LEVEL=error

# Recommendation Service
RECOMMENDATION_CACHE_TTL=300
RECOMMENDATION_BATCH_SIZE=10
RANDOM_EXPLORATION_RATIO=0.1

# Content-Streaming Service
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
S3_BUCKET=test-bucket
CDN_URL=https://test-cdn.example.com
TRANSCODING_ENABLED=false
TRANSCODING_QUALITIES=360p

# Feature Flags (disabled in test)
ENABLE_SUBSCRIPTION_FEATURES=true
ENABLE_CDN=false
