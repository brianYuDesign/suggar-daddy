# ============================================================
# Docker Environment Configuration
# ============================================================

# Core Environment
NODE_ENV=development
LOG_LEVEL=debug

# API Gateway & Server Configuration
CORS_ORIGINS=http://localhost:4200,http://localhost:4300

# Database Configuration (Docker service names)
# PostgreSQL High Availability Configuration
POSTGRES_HA_ENABLED=true
POSTGRES_MASTER_HOST=postgres-master
POSTGRES_REPLICA_HOST=postgres-replica
POSTGRES_HOST=postgres-master
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=suggar_daddy
REPLICATION_PASSWORD=replicator_password

# TypeORM / Prisma Database URL (using Docker service names)
# Master for writes
DATABASE_URL=postgresql://postgres:postgres@postgres-master:5432/suggar_daddy

# Legacy DB variables (for compatibility)
DB_HOST=postgres-master
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=suggar_daddy

# Redis Configuration (Docker service name)
REDIS_HOST=redis-master
REDIS_PORT=6379

# Kafka Configuration (Docker service name)
KAFKA_BROKERS=kafka:9092
KAFKA_GROUP_ID=db-writer-group

# JWT Configuration
JWT_SECRET=dev-jwt-secret-minimum-32-characters-long-for-security-DO-NOT-USE-IN-PROD
JWT_REFRESH_SECRET=dev-refresh-secret-minimum-32-characters-long-for-security-DO-NOT-USE-IN-PROD
JWT_EXPIRES_IN=7d

# Stripe Configuration (Optional - for payment testing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Firebase Configuration (Optional)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Cloudinary Configuration (Optional - for file uploads)
CLOUDINARY_CLOUD_NAME=demo-cloud
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=demo-secret-key-for-testing

# Jaeger Distributed Tracing
JAEGER_ENDPOINT=http://jaeger:4318/v1/traces
OTEL_SAMPLING_RATE=1.0
APP_VERSION=1.0.0

# Service Ports (explicit configuration)
API_GATEWAY_PORT=3000
USER_SERVICE_PORT=3001
AUTH_SERVICE_PORT=3002
MATCHING_SERVICE_PORT=3003
NOTIFICATION_SERVICE_PORT=3008
MESSAGING_SERVICE_PORT=3005
CONTENT_SERVICE_PORT=3006
PAYMENT_SERVICE_PORT=3007
MEDIA_SERVICE_PORT=3010
SUBSCRIPTION_SERVICE_PORT=3009
DB_WRITER_SERVICE_PORT=3010
ADMIN_SERVICE_PORT=3011

# Service URLs (for API Gateway proxy - using Docker service names)
AUTH_SERVICE_URL=http://auth-service:3002
USER_SERVICE_URL=http://user-service:3001
PAYMENT_SERVICE_URL=http://payment-service:3007
SUBSCRIPTION_SERVICE_URL=http://subscription-service:3009
CONTENT_SERVICE_URL=http://content-service:3006
MATCHING_SERVICE_URL=http://matching-service:3003
MEDIA_SERVICE_URL=http://media-service:3010
MESSAGING_SERVICE_URL=http://messaging-service:3005
NOTIFICATION_SERVICE_URL=http://notification-service:3008
ADMIN_SERVICE_URL=http://admin-service:3011

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
