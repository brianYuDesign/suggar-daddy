# Staging Environment Configuration
NODE_ENV=staging

# PostgreSQL Configuration
POSTGRES_HOST=postgres-staging.example.com
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STAGING_PASSWORD
POSTGRES_DB=suggar_daddy_staging

# PostgreSQL Performance (Staging)
POSTGRES_MAX_CONNECTIONS=300
POSTGRES_SHARED_BUFFERS=512MB
POSTGRES_EFFECTIVE_CACHE_SIZE=2GB
POSTGRES_WORK_MEM=16MB
POSTGRES_MAINTENANCE_WORK_MEM=256MB

# Redis Configuration
REDIS_HOST=redis-staging.example.com
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# Kafka Configuration
KAFKA_BROKERS=kafka-staging-1.example.com:9092,kafka-staging-2.example.com:9092
KAFKA_GROUP_ID=db-writer-group-staging

# API Gateway
PORT=3000
CORS_ORIGINS=https://staging.example.com,https://admin-staging.example.com

# Service URLs (Internal)
AUTH_SERVICE_URL=http://auth-service:3002
USER_SERVICE_URL=http://user-service:3001
PAYMENT_SERVICE_URL=http://payment-service:3007
SUBSCRIPTION_SERVICE_URL=http://subscription-service:3009

# JWT Configuration
JWT_SECRET=CHANGE_ME_STAGING_JWT_SECRET_MINIMUM_32_CHARACTERS
JWT_EXPIRES_IN=7d

# Stripe (Test Keys for Staging)
STRIPE_SECRET_KEY=sk_test_your_staging_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_staging_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_staging_key_here

# Firebase
FIREBASE_PROJECT_ID=suggar-daddy-staging
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@suggar-daddy-staging.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=CHANGE_ME_FIREBASE_PRIVATE_KEY

# Cloudinary
CLOUDINARY_CLOUD_NAME=suggar-daddy-staging
CLOUDINARY_API_KEY=CHANGE_ME_API_KEY
CLOUDINARY_API_SECRET=CHANGE_ME_API_SECRET

# Backup Configuration
BACKUP_DIR=/mnt/backups
RETENTION_DAYS=14

# Monitoring
NEXT_PUBLIC_API_URL=https://api-staging.example.com

# Feature Flags
ENABLE_DEBUG_LOGGING=true
ENABLE_SWAGGER=true
ENABLE_RATE_LIMITING=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/staging
SENTRY_ENVIRONMENT=staging

# New Relic (APM)
NEW_RELIC_LICENSE_KEY=CHANGE_ME
NEW_RELIC_APP_NAME=suggar-daddy-staging
