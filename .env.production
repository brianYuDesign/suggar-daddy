# Production Environment Configuration
NODE_ENV=production

# PostgreSQL Configuration (RDS/CloudSQL)
POSTGRES_HOST=postgres-prod.c1a2b3c4d5e6.us-east-1.rds.amazonaws.com
POSTGRES_PORT=5432
POSTGRES_USER=postgres_prod
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PRODUCTION_PASSWORD
POSTGRES_DB=suggar_daddy_production

# PostgreSQL Performance (Production)
POSTGRES_MAX_CONNECTIONS=500
POSTGRES_SHARED_BUFFERS=1GB
POSTGRES_EFFECTIVE_CACHE_SIZE=4GB
POSTGRES_WORK_MEM=32MB
POSTGRES_MAINTENANCE_WORK_MEM=512MB

# Redis Configuration (ElastiCache/MemoryStore)
REDIS_HOST=redis-prod.abc123.use1.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_SECURE_REDIS_PASSWORD
REDIS_TLS=true

# Kafka Configuration (MSK/Confluent Cloud)
KAFKA_BROKERS=kafka-prod-1.example.com:9093,kafka-prod-2.example.com:9093,kafka-prod-3.example.com:9093
KAFKA_GROUP_ID=db-writer-group-prod
KAFKA_SSL=true
KAFKA_SASL_USERNAME=CHANGE_ME
KAFKA_SASL_PASSWORD=CHANGE_ME

# API Gateway
PORT=3000
CORS_ORIGINS=https://www.example.com,https://admin.example.com

# Service URLs (Internal)
AUTH_SERVICE_URL=http://auth-service:3002
USER_SERVICE_URL=http://user-service:3001
PAYMENT_SERVICE_URL=http://payment-service:3007
SUBSCRIPTION_SERVICE_URL=http://subscription-service:3009

# JWT Configuration
JWT_SECRET=CHANGE_ME_PRODUCTION_JWT_SECRET_MINIMUM_64_CHARACTERS_HIGHLY_SECURE
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Stripe (Live Keys)
STRIPE_SECRET_KEY=sk_live_your_production_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_live_your_production_key_here

# Firebase
FIREBASE_PROJECT_ID=suggar-daddy-production
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@suggar-daddy-production.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=CHANGE_ME_FIREBASE_PRIVATE_KEY_PRODUCTION

# Cloudinary
CLOUDINARY_CLOUD_NAME=suggar-daddy-prod
CLOUDINARY_API_KEY=CHANGE_ME_PROD_API_KEY
CLOUDINARY_API_SECRET=CHANGE_ME_PROD_API_SECRET

# AWS Configuration (for S3, SES, etc.)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=CHANGE_ME
AWS_SECRET_ACCESS_KEY=CHANGE_ME
AWS_S3_BUCKET=suggar-daddy-assets-prod

# Backup Configuration
BACKUP_DIR=/mnt/backups
RETENTION_DAYS=30
BACKUP_TO_S3=true
BACKUP_S3_BUCKET=suggar-daddy-backups-prod

# Monitoring
NEXT_PUBLIC_API_URL=https://api.example.com

# Feature Flags
ENABLE_DEBUG_LOGGING=false
ENABLE_SWAGGER=false
ENABLE_RATE_LIMITING=true

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/production
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# New Relic (APM)
NEW_RELIC_LICENSE_KEY=CHANGE_ME_PRODUCTION_KEY
NEW_RELIC_APP_NAME=suggar-daddy-production
NEW_RELIC_LOG_LEVEL=info

# DataDog (Optional)
DATADOG_API_KEY=CHANGE_ME
DATADOG_APP_KEY=CHANGE_ME
DATADOG_SITE=datadoghq.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HELMET_ENABLED=true
CORS_CREDENTIALS=true
SECURE_COOKIES=true
SESSION_SECRET=CHANGE_ME_SECURE_SESSION_SECRET

# Email (SendGrid/SES)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=CHANGE_ME
EMAIL_FROM=noreply@example.com

# SMS (Twilio)
TWILIO_ACCOUNT_SID=CHANGE_ME
TWILIO_AUTH_TOKEN=CHANGE_ME
TWILIO_PHONE_NUMBER=+1234567890

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/private/server.key

# Health Checks
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Performance
MAX_FILE_UPLOAD_SIZE=10485760
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000
