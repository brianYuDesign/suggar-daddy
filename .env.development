# Development Environment Configuration
NODE_ENV=development

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=suggar_daddy

# PostgreSQL Performance (Development)
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_WORK_MEM=8MB
POSTGRES_MAINTENANCE_WORK_MEM=128MB

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BROKERS=localhost:9094
KAFKA_GROUP_ID=db-writer-group

# API Gateway
API_GATEWAY_PORT=3000
CORS_ORIGINS=http://localhost:4200,http://localhost:4300

# Service-specific ports
AUTH_SERVICE_PORT=3002
USER_SERVICE_PORT=3001
PAYMENT_SERVICE_PORT=3007
SUBSCRIPTION_SERVICE_PORT=3009

# Service URLs
AUTH_SERVICE_URL=http://localhost:3002
USER_SERVICE_URL=http://localhost:3001
PAYMENT_SERVICE_URL=http://localhost:3007
SUBSCRIPTION_SERVICE_URL=http://localhost:3009

# JWT Configuration
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Stripe (Development/Test Keys) â€” set in .env or .env.local
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=
# STRIPE_PUBLISHABLE_KEY=

# Firebase (Optional)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Cloudinary (Optional)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Jaeger Distributed Tracing
JAEGER_ENDPOINT=http://localhost:4318/v1/traces
OTEL_SAMPLING_RATE=1.0
APP_VERSION=1.0.0

# Backup Configuration
BACKUP_DIR=./backups
RETENTION_DAYS=7

# Monitoring
NEXT_PUBLIC_API_URL=http://localhost:3000

# Feature Flags
ENABLE_DEBUG_LOGGING=true
ENABLE_SWAGGER=true
ENABLE_RATE_LIMITING=false
