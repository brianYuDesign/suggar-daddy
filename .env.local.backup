# ============================================================
# Environment Configuration
# ============================================================

# Core Environment
NODE_ENV=development
LOG_LEVEL=debug

# API Gateway & Server Configuration
# PORT is set per-service in their main.ts files
# API Gateway: 3000, User: 3001, Auth: 3002, etc.
CORS_ORIGINS=http://localhost:4200,http://localhost:4300

# Database Configuration (matches docker-compose postgres service)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=suggar_daddy

# TypeORM / Prisma Database URL (required by most services)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/suggar_daddy

# Legacy DB variables (for compatibility)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=suggar_daddy

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Kafka Configuration
KAFKA_BROKERS=localhost:9094
KAFKA_GROUP_ID=db-writer-group

# JWT Configuration
JWT_SECRET=dev-jwt-secret-minimum-32-characters-long-for-security-DO-NOT-USE-IN-PROD
JWT_REFRESH_SECRET=dev-refresh-secret-minimum-32-characters-long-for-security-DO-NOT-USE-IN-PROD
JWT_EXPIRES_IN=7d

# Stripe Configuration (Optional - for payment testing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Firebase Configuration (Optional)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Cloudinary Configuration (Optional - for file uploads)
CLOUDINARY_CLOUD_NAME=demo-cloud
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=demo-secret-key-for-testing

# Service Ports (explicit configuration)
# These match the main.ts defaults and docker-compose.yml
API_GATEWAY_PORT=3000
USER_SERVICE_PORT=3001
AUTH_SERVICE_PORT=3002
MATCHING_SERVICE_PORT=3003
NOTIFICATION_SERVICE_PORT=3008
MESSAGING_SERVICE_PORT=3005
CONTENT_SERVICE_PORT=3006
PAYMENT_SERVICE_PORT=3007
MEDIA_SERVICE_PORT=3010
SUBSCRIPTION_SERVICE_PORT=3009
DB_WRITER_SERVICE_PORT=3010
ADMIN_SERVICE_PORT=3011

# Service URLs (for API Gateway proxy - must use localhost for local dev)
AUTH_SERVICE_URL=http://localhost:3002
USER_SERVICE_URL=http://localhost:3001
PAYMENT_SERVICE_URL=http://localhost:3007
SUBSCRIPTION_SERVICE_URL=http://localhost:3009
CONTENT_SERVICE_URL=http://localhost:3006
MATCHING_SERVICE_URL=http://localhost:3003
MEDIA_SERVICE_URL=http://localhost:3010
MESSAGING_SERVICE_URL=http://localhost:3005
NOTIFICATION_SERVICE_URL=http://localhost:3008
ADMIN_SERVICE_URL=http://localhost:3011

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
